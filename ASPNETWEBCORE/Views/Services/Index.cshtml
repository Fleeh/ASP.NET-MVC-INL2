@{
    ViewData["Title"] = "Services";
}
<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styleservice.css">
    <title>Services</title>
</head>
<body>
    <div class="bg-blue-gradient">
        <div class="container">
            <!-- header -->
            <div class="header-grid">
                <div id="branding">
                    <h1>OmniVus.</h1>
                    <p>IT Service & Technology</p>
                </div>
                <nav id="top-menu">
                 <a href="mailto:info@domain.com">info@domain.com</a>

                  @if (SignInManager.IsSignedIn(User))
                    {
                        <div id="mydisplayname">
                            <a href="#">@User.FindFirst("DisplayName").Value</a>
                        </div>
                        <div id="myprofilename">
                        <a asp-controller="Profile" asp-action="Index">My Profile</a>
                        </div>

                        @if (User.IsInRole("admin"))
                        {
                            <a asp-controller="Role" asp-action="Index">Handle Roles</a>
                        }                      
                        
                    }
                    else
                    {
                    <div class="social">
                        <a href="https://facebook.com">facebook</a>
                        <a href="https://twitter.com">twitter</a>
                        <a href="https://linkedin.com">linkedin</a>
                        <a href="https://youtube.com">youtube</a>
                        </div>
                    }   
                </nav>
                <nav id="main-menu">
                    <div class="menu-items">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-controller="Services" asp-action="Index">Services</a>
                    <a asp-controller="Contact" asp-action="Index">Contact</a>
                    </div>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-controller="Authentication" asp-action="SignOut" class="btn btn-main">Logout</a>
                    }
                    else
                    {
                        <a asp-controller="Authentication" asp-action="SignIn" class="btn btn-main">Login</a>
                    }

                   
                </nav>
            </div>
            <div id="showcase">
                <div class="service">
                    <img src="/images/Services.svg" id="pic1">  <br>
                    <img src="/images/Home    Services.svg" id="pic2">
                </div>
            </div>

            <!-- showcase -->
                        <section id="grid">
                            <div class="grid-container">
                                <div class="grid-item grid-item-1">
                                    <div class="card" style="width: 16rem;">
                                        <img src="/images/gridcard.svg" class="card-img-top" alt="...">
                                        <div class="card-body">
                                          <p class="card-text">UI/UX Design</p>
                                        </div>
                                      </div>
                                      <img src="/images/blue dot.svg" id="bluedot1">
                                </div>
                                <div class="grid-item grid-item-2">
                                    <div class="card" style="width: 16rem;">
                                        <img src="/images/gridcard.svg" class="card-img-top" alt="...">
                                        <div class="card-body">                                       
                                          <p class="card-text">UI/UX Design</p>
                                        </div>
                                      </div>
                                      <img src="/images/blue dot.svg" id="bluedot2">
                                      <img src="/images/blue text.svg" id="bluetext">
                                </div>
                                <div class="grid-item grid-item-3">
                                    <div class="card" style="width: 16rem;">
                                        <img src="/images/gridcard.svg" class="card-img-top" alt="...">
                                        <div class="card-body">
                                          <p class="card-text">Technology Prof.</p>
                                        </div>
                                      </div>
                                      <img src="/images/blue dot.svg" id="bluedot3">
                                </div>
                                <div class="grid-item grid-item-4">
                                    <div class="card" style="width: 16rem;">
                                    <img src="/images/gridcard.svg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                      <p class="card-text">Web Development</p>
                                    </div>
                                  </div>
                                  <img src="/images/blue dot.svg" id="bluedot4">
                                </div>
                                <div class="grid-item grid-item-5">
                                    <div class="card" style="width: 16rem;">
                                    <img src="/images/gridcard.svg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                      <p class="card-text">App Development</p>
                                    </div>
                                  </div>
                                  <img src="/images/blue dot.svg" id="bluedot5">
                                </div>
                                <div class="grid-item grid-item-6">
                                    <div class="card" style="width: 16rem;">
                                    <img src="/images/gridcard.svg" class="card-img-top" alt="...">
                                    <div class="card-body">
                                      <p class="card-text">Game Design</p>
                                    </div>
                                  </div>
                                  <img src="/images/blue dot.svg" id="bluedot6">
                                </div>
                            </div>                         
                        </section>
        </div>

        <div id="finish">
            <div class="bg-blackser">
                <div class="container">
                    <div class="cataloge">
                    <div class="Omnivus">
                        <h1>OmniVus.</h1>
                        <h2>The web has changed a lot since we posted our<br> first article back in 2007. The team at Mattin-<br>Lassi Group has changed too, as have the<br> things that we bring to our community<br>
                            conferences, books, and our membership<br> added to the online magazine. 
                        </h2>
                            <h3>One thing that hasn’t changed is that we’re a<br> small team — with most of us not working</h3>
                    </div>
                    <div class="Workinghours">
                        <h1>Working Hours</h1>
                        <h2>Monday - Friday: 7:00 - 17:00<br>
                            Saturday: 7:00 - 12:00<br>
                            Sunday and holidays: 8:00 - 10:00</h2>

                           <h3> 
                               <font color="#FFFFFF">For more then 15 years,</font>
                            IT Service has been a <br> reliable partner in the field of logistics and <br> cargo forwarding.</h3>
                        </div>
                        <img src="/images/bubbles.svg" id="bubbles">
                    </div>
                    <div class="copyright">
                        <p>Copyright © Mattin-Lassei Group AB - 2022</p>
                                    </div>
                                </div>
                            </div>
                        </div>   


                        

            
            
            

        
    <!-- <div style="height: 5000px"></div> -->

    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="js/site.js"></script>
</body>
</html>