                    <button type="button" class="btn btn-secondary">video Intro Video</button>  
                    <div class="bluething">
                        <img src="/images/bluething.svg">                                     
                </div>
             
            </div>
            </div>
        </div>
    </section>     
    <div class="bg-black-gradient"> 
