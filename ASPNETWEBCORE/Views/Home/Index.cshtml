@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8"
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <script src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Home</title>
</head>
<body>
    
    <div class="bg-blue-gradient">
        <div class="container">         
            <!-- header -->
            <div class="header-grid">
                <div id="branding">
                    <h1>OmniVus.</h1>
                    <p>IT Service & Technology</p>
                </div>
                <nav id="top-menu">
                    <a href="mailto:info@domain.com">info@domain.com</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div id="mydisplayname">
                            <a href="#">@User.FindFirst("DisplayName").Value</a>
                        </div>
                        <div id="myprofilename">
                        <a asp-controller="Profile" asp-action="Index">My Profile</a>
                        </div>

                        @if (User.IsInRole("admin"))
                        {
                            <a asp-controller="Role" asp-action="Index">Handle Roles</a>
                        }                      
                        
                    }
                    else
                    {
                    <div class="social">
                        <a href="https://facebook.com">facebook</a>
                        <a href="https://twitter.com">twitter</a>
                        <a href="https://linkedin.com">linkedin</a>
                        <a href="https://youtube.com">youtube</a>
                        </div>
                    }                                      
                </nav>
                <nav id="main-menu">
                    <div class="menu-items">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                            <a asp-controller="Services" asp-action="Index">Services</a>
                            <a asp-controller="Contact" asp-action="Index">Contact</a>
                    </div>
                    

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-controller="Authentication" asp-action="SignOut" class="btn btn-main">Logout</a>
                    }
                    else
                    {
                        <a asp-controller="Authentication" asp-action="SignIn" class="btn btn-main">Login</a>
                    }
                    
                    

                </nav>
            </div>

            <!-- showcase -->
            <section id="showcase">
                <div class="column">
                    <div class="content">
                        <p>Promote any product, service or online course.</p>
                        <h1>Get every it Services Here</h1>
                        <div class="items">
                            <div class="item">
                                <img src="images/red-circle.svg" alt="">
                                <span>IT Product</span>
                            </div>
                            <div class="item">
                                <img src="images/blue-circle.svg" alt="">
                                <span>IT Services</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column">
                    <img class="showcase-image" src="images/person-male.svg" alt="">
                </div>
            </section>

        </div>
    </div>

    <!-- middle -->

    <section id="middle">
        <div class="middlecolumn">
